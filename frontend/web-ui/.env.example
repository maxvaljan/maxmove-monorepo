# Environment Variables
# Copy this file to .env.local for local development

# API & Backend
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Analytics & Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Maps & Geolocation
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags
NEXT_PUBLIC_ENABLE_DRIVER_APP=true
NEXT_PUBLIC_ENABLE_BUSINESS_FEATURES=true

# Deployment Environment
NODE_ENV=development # Use 'production' in production environments
NEXT_PUBLIC_DEPLOYMENT_ENVIRONMENT=development # Used to display environment info in UI

# CDN Configuration
NEXT_PUBLIC_ASSETS_URL=

# Cache & Performance
CACHE_MAX_AGE=60 # In seconds
REVALIDATE_INTERVAL=3600 # In seconds

# Logging Level
LOG_LEVEL=info # debug, info, warn, or error